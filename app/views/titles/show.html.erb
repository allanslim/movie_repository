<div id="dashboard_bg" class="dashboard_bg"/>
<br/><br/>
<div class="container" >


	<div class="well" >
	<br/><br/>
		<div class="container" >

			<p id="notice"><%= notice %></p>

			<p>
			  <strong>Name:</strong>
			  <%= @title.name %>
			</p>

			<p>
			  <strong>Description:</strong>
			  <%= @title.description %>
			</p>

			<p>
			  <strong>Length:</strong>
			  <%= @title.length %>
			</p>

			<p>
			  <strong>Rating:</strong>
			  <%= @title.rating %>
			</p>
			<p>
			  <strong>Studios:</strong>
	          <ul>
	          	 <% @studios.each do |studio| %>
	          	    <li> <%= studio.name %></li>
	          	 <% end %>
	          </ul>
			</p>

			<p>
			  <strong>Actors:</strong>
	          <ul>
	          	 <% @actors.each do |actor| %>
	          	    <li> <%= actor.fullname %></li>
	          	 <% end %>
	          </ul>
			</p>

			<p>
			  <strong>Asset:</strong>
	          <ul>
	          	 <% @assets.each do |asset| %>
	          	    <li> <%= asset.assetValue %> - (<%= asset.assetType%>)</li>
	          	 <% end %>
	          </ul>
			</p>

			<% if @isAdmin == 1 %>
			<%= link_to 'Edit', edit_title_path(@title) %> |
			<% end %> 
			<%= link_to 'Back', titles_path %>

		</div>
	</div>
</div>	
