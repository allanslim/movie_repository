<div id="dashboard_bg" class="dashboard_bg"/>
<br/><br/>
<div class="container" >


<div class="well" >
  <p> Welcome <%= @user.firstname %>!</p>

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid" >
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Title', titles_path %></li>
        <li><%= link_to 'Actors', actors_path %></li>
        <li><%= link_to 'Assets', assets_path %></li>
        <li><%= link_to 'Studios', studios_path %></li>
        <li><%= link_to 'Users', users_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Logout',  '/logout' %></li>
      </ul>
    </div>
  </nav>

  <h1>Titles</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Length</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @titles.each do |title| %>
        <tr>
          <td><%= title.name %></td>
          <td><%= title.description %></td>
          <td><%= title.length %></td>
          <td><%= title.rating %></td>
          <td><%= link_to 'Show', title %></td>
          <% if @isAdmin == 1 %>
            <td><%= link_to 'Edit', edit_title_path(title) %></td>
            <td><%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <% if @isAdmin == 1 %>
     <%= link_to 'New Title', new_title_path, html_options = {:class => 'btn btn-default'} %>
  <% end %>
</div>

</div>
