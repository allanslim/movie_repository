<div id="dashboard_bg" class="dashboard_bg"/>
  <br/><br/>
  <div class="container" >
    <div class="well" >
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>Password:</strong>
        <%= @user.password %>
      </p>

      <p>
        <strong>Firstname:</strong>
        <%= @user.firstname %>
      </p>

      <p>
        <strong>Lastname:</strong>
        <%= @user.lastname %>
      </p>

      <p>
        <strong>Role:</strong>
        <%= @user.role %>
      </p>
      <% if @isAdmin == 1 %>
        <%= link_to 'Edit', edit_user_path(@user) %> |
      <% end %>
      <%= link_to 'Back', users_path %>
    </div>
  </div>
</div>
