        <h1>Listing users</h1>

          <table class="table">
            <thead>
              <tr>
                <th>Email</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Role</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <% if @currentUserId == user.id %>
                    <td><%= user.password %></td>
                  <% else %>
                    <td>*****</td>
                  <% end %>
                    
                  <td><%= user.firstname %></td>
                  <td><%= user.lastname %></td>
                  <td><%= user.role %></td>
                  <td><%= link_to 'Show', user %></td>
                  <% if @isAdmin == 1 %>
                  <td><%= link_to 'Edit', edit_user_path(user) %></td>
                  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <% if @isAdmin == 1 %>
            <%= link_to 'New User', new_user_path, html_options = {:class => 'btn btn-default'} %>
          <% end %>
      </div>
    </div>
</div>
