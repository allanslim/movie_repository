<div id="dashboard_bg" class="dashboard_bg"/>
  <br/><br/>
  <div class="container" >
    <div class="well" >

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid" >
      <ul class="nav navbar-nav">
        <li ><%= link_to 'Title', titles_path %></li>
        <li class="active"><%= link_to 'Actors', actors_path %></li>
        <li><%= link_to 'Assets', assets_path %></li>
        <li><%= link_to 'Studios', studios_path %></li>
        <li><%= link_to 'Users', users_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Logout',  '/logout' %></li>
      </ul>
    </div>
  </nav>      

      <h1>Listing actors</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Age</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @actors.each do |actor| %>
            <tr>
              <td><%= actor.firstname %></td>
              <td><%= actor.lastname %></td>
              <td><%= actor.age %></td>
              <td><%= link_to 'Show', actor %></td>
              <% if @isAdmin == 1 %>
               <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
               <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
        <% if @isAdmin == 1 %>
      <%= link_to 'New Actor', new_actor_path %>
         <% end %>
    </div>
  </div>
</div>
